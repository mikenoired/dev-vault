{
  "name": "dev-vault",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mcp": "node scripts/ensure-mcp-bin.mjs && cargo build --bin dev-vault-mcp --manifest-path src-tauri/Cargo.toml && node scripts/copy-mcp-bin.mjs",
    "build:mcp": "node scripts/ensure-mcp-bin.mjs && cargo build --release --bin dev-vault-mcp --manifest-path src-tauri/Cargo.toml && node scripts/copy-mcp-bin.mjs --release",
    "dev:tauri": "bun run dev:mcp && bun run dev",
    "build:tauri": "bun run build:mcp && bun run build",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.11",
    "@fsegurai/codemirror-theme-material-dark": "^6.2.3",
    "@lezer/highlight": "^1.2.3",
    "@radix-ui/react-context-menu": "^2.2.0",
    "@radix-ui/react-dropdown-menu": "^2.1.0",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-shell": "~2",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "lucide-react": "^0.562.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-window": "^2.2.5",
    "rehype": "^13.0.2",
    "rehype-raw": "^7.0.0",
    "remark-directive": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "unist-util-visit": "^5.0.0",
    "zustand": "^5.0.10"
  },
  "overrides": {
    "@codemirror/state": "6.5.4",
    "@codemirror/view": "6.39.11",
    "@codemirror/language": "6.12.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@tauri-apps/cli": "^2",
    "@types/bun": "^1.3.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  }
}
